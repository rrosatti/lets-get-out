<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rodri.letsgetout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity
            android:name="com.example.rodri.letsgetout.activity.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity" android:theme="@style/AppTheme"/>

        <activity android:name=".activity.SetUpGoalActivity" android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activity.NewExpenseActivity" android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activity.NewSavingActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.UpdateGoalActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.SimulationActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.GraphActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.MonthlyBalanceGraphActivity" android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>