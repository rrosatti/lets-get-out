<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="15dp">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtEstimatedValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:text="Estimated Value"/>

    <TextView
        android:id="@+id/txtEstimatedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:text="R$ 10.000,00"/>

    <TextView
        android:id="@+id/txtAchievedValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEstimatedValueLabel"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:text="Achieved Value"/>

    <TextView
        android:id="@+id/txtAchievedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEstimatedValue"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:text="R$ 200,00"/>

    <TextView
        android:id="@+id/txtNeedToSaveLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAchievedValueLabel"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:text="Need to Save"/>

    <TextView
        android:id="@+id/txtNeedToSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAchievedValue"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:text="R$ 9.800,00"/>

    <TextView
        android:id="@+id/txtMonthsRemainingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNeedToSaveLabel"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:text="Months remaining"/>

    <TextView
        android:id="@+id/txtMonthsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNeedToSave"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:text="18"/>

    </RelativeLayout>

</RelativeLayout>