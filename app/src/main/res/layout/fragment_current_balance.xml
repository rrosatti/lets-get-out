<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtEstimatedValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Estimated Value"/>

            <TextView
                android:id="@+id/txtEstimatedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_gravity="end|center_vertical"
                android:text="R$ 10.000,00"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/txtAchievedValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Achieved Value"/>

            <TextView
                android:id="@+id/txtAchievedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_gravity="end|center_vertical"
                android:text="R$ 200,00"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/txtNeedToSaveLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Need to Save"/>

            <TextView
                android:id="@+id/txtNeedToSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_gravity="end|center_vertical"
                android:text="R$ 9.800,00"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/txtMonthsRemainingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Months remaining"/>

            <TextView
                android:id="@+id/txtMonthsRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_gravity="end|center_vertical"
                android:text="18"/>
        </TableRow>

        <Button
            android:id="@+id/btUpdateGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/update_goal"
            android:layout_marginTop="40dp"/>

    </TableLayout>



</RelativeLayout>